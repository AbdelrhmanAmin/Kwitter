<div class="container-fluid">
  <div class="row h-100">
    <div class="col-2 grid-left p-0">
      <%= render 'left' %>
    </div>
    <div class="col-10">
      <div class="row">
        <div class="col-12 p-0">
          <%= render 'header' %>
        </div>
      </div>
      <div class="row px-5 h-100">
        <div class="col-5 py-5">
          <h2><%= @event.title %></h2>
          <span class='text-secondary'><%= @event.date %></span>
          <h6>Created by: <%= @event.creator.username%></h6>
          <br>
          <strong>Description:</strong>
          <p><%= @event.content %></p>
        </div>
        <div class="col-5 py-5 border border-top-0 border-left-0 border-bottom-0 p-0 med">
          <%= event_replacer(@event) %>
        </div>
        <div class="col-2 py-5">
          <h6 class='text-success'><%= attendance_date%></h6>
          <ul class='px-3'>
            <%= render @event.attendances %>
          </ul>
            <%= attendance_checker(current_user) %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'footer' %>