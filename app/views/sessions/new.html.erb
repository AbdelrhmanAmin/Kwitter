<p id="notice"><%= notice %></p>
<h1>Login</h1>
<%= form_tag sessions_path do |form| %>
  <div class="form-group">
    <%= label_tag :username, "Username", :class => 'control-label col-4' %>
    <div class="col-8">
      <%= text_field_tag :username%>
    </div>
  </div>
  <div class=”actions”>
    <%= submit_tag "Login" %>
  </div>
<% end %>